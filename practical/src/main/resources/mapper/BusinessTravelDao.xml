<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tju.practical.dao.BusinessTravelDao">

    <resultMap type="com.tju.practical.entity.BusinessTravel" id="BusinessTravelMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="flowerName" column="flower_name" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="startTime" column="start_time" jdbcType="VARCHAR"/>
        <result property="endTime" column="end_time" jdbcType="VARCHAR"/>
        <result property="days" column="days" jdbcType="INTEGER"/>
        <result property="reason" column="reason" jdbcType="VARCHAR"/>
        <result property="result" column="result" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BusinessTravelMap">
        select
          id, flower_name, name, start_time, end_time, days, reason, result
        from practical.business_travel
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BusinessTravelMap">
        select
          id, flower_name, name, start_time, end_time, days, reason, result
        from practical.business_travel
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BusinessTravelMap">
        select
          id, flower_name, name, start_time, end_time, days, reason, result
        from practical.business_travel
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="flowerName != null and flowerName != ''">
                and flower_name = #{flowerName}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="startTime != null and startTime != ''">
                and start_time = #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                and end_time = #{endTime}
            </if>
            <if test="days != null">
                and days = #{days}
            </if>
            <if test="reason != null and reason != ''">
                and reason = #{reason}
            </if>
            <if test="result != null">
                and result = #{result}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into practical.business_travel(flower_name, name, start_time, end_time, days, reason, result)
        values (#{flowerName}, #{name}, #{startTime}, #{endTime}, #{days}, #{reason}, #{result})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update practical.business_travel
        <set>
            <if test="flowerName != null and flowerName != ''">
                flower_name = #{flowerName},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="startTime != null and startTime != ''">
                start_time = #{startTime},
            </if>
            <if test="endTime != null and endTime != ''">
                end_time = #{endTime},
            </if>
            <if test="days != null">
                days = #{days},
            </if>
            <if test="reason != null and reason != ''">
                reason = #{reason},
            </if>
            <if test="result != null">
                result = #{result},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from practical.business_travel where id = #{id}
    </delete>

</mapper>